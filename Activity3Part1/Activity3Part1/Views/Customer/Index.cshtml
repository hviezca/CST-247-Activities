@model Tuple<List<Activity3Part1.Models.CustomerModel>, Activity3Part1.Models.CustomerModel>

<style>
    ul {
        list-style-type: none;
    }

    #customerInformationArea {
        border: 1px solid black;
        border-radius: 5px;
        margin: 10px;
        padding: 10px;
    }
</style>

<form asp-action="OnSelectCustomer" asp-controller="Customer" method="post">
    <ul>
        @foreach (var item in Model.Item1)
        {
            <li>
                <input class="customerRadio" type="radio" name="Id" id="Id" value="@item.Id" />
                <label>@item.Name</label>
            </li>
        }
    </ul>
    <input type="submit" id="selectCustomer" />
</form>
<div id="customerInformationArea">
    <p>@Html.Partial("_CustomerDetails", Tuple.Create(Model.Item1, Model.Item2))</p>
</div>